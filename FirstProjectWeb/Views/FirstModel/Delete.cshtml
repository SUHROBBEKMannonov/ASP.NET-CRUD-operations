@model FirstModel

<form asp-action="Delete" method="post">
	<input asp-for="Id" hidden />
	<div class="border  p-3 mt-4">	
		<div row pb-2>
			<h2 class="text-primary"> Delete  User</h2>
			</div>
			<hr />
			<div asp-validation-summary="All"></div>
			<div class="mb-3">
				<label > First Name
				<input asp-for="FirstName" disabled class="form-control" placeholder="Alberto" />	
				</label>
				<span asp-validation-for="FirstName"  name="First Name" class="text-danger"></span>
			</div>
			<div class="mb-3" >
				<label > Last Name:
				<input asp-for="LastName"disabled  class="form-control" placeholder="Walker" />	
				</label>
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
				<div class="mb-3" >
					<label > Email:
				<input asp-for="Email" disabled class="form-control-email" placeholder="example@mail.ru" />	
				</label>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mb-3" >
				<label > Birth of date:
				<input asp-for="BirthDate" type="date"disabled   class="form-control" placeholder="Birth of date" />	
					<span asp-validation-for="BirthDate" class="text-danger"></span>
				</label>
			</div>

			<div class="mb-3" >
				<label > Phone number: </br>+998
				<input asp-for="PhoneNumber" type="tel" maxlength="9" placeholder="00-000-00-00" disabled  class="form-control-phonenumber" placeholder="Phone number" />	
				</label>
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
			</div>
		
			<button type="submit" class="btn  btn-outline-danger" style="width=100px"onclick="return confirm('Are you sure you want to delete this record?')";> Delete </button>
			<a asp-controller="FirstModel" asp-action="ListOfUsers" class="btn btn-outline-secondary" style="width=150px"> Back to list </a>
		</div>
	</div>

</form>
@section Scripts{

	@{
		<partial name="_ValidationScriptsPartial"/>

	}
}